<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/draw_drawing_bg"
    android:id="@+id/layout"
    android:layout_height="75dp">
    <LinearLayout
        android:id="@+id/llLeftContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:text="1"
            android:textColor="#919191"
            android:textSize="10sp"/>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:background="@mipmap/no_background_sub"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未命名1"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"

                />
            <ImageView
                android:id="@+id/img_sel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/draw_aa_icon_xianshi"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivMore"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/icon_sz"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/llLeftContent"
        android:layout_marginBottom="16dp"
        android:padding="5dp"
        />

</RelativeLayout>