<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/canvas_main_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp">
            <TextView
                android:id="@+id/tvPenRender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="颜色动态"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <Switch
                android:id="@+id/scPenColorActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/tvPenAppear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvPenRender"
                app:layout_constraintStart_toStartOf="parent"
                android:text="色相"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tvPenAppearText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvPenRender"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="50%"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                />

            <SeekBar
                android:id="@+id/sbFilterColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvPenAppear"
                android:layout_marginTop="10dp"
                android:progress="50"
                android:min="0"
                android:max="100"
                android:maxHeight="10dp"
                android:progressDrawable="@drawable/seekbar_track"
                android:thumb="@drawable/seekbar_thumb"
                android:splitTrack="false"
                />

            <TextView
                android:id="@+id/tvPenFull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sbFilterColor"
                app:layout_constraintStart_toStartOf="parent"
                android:text="饱和度"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tvPenFullText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sbFilterColor"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="50%"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                />

            <SeekBar
                android:id="@+id/sbPenFull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvPenFull"
                android:layout_marginTop="10dp"
                android:progress="50"
                android:min="0"
                android:max="100"
                android:maxHeight="10dp"
                android:progressDrawable="@drawable/seekbar_track"
                android:thumb="@drawable/seekbar_thumb"
                android:splitTrack="false"
                />

            <TextView
                android:id="@+id/tvPenLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sbPenFull"
                app:layout_constraintStart_toStartOf="parent"
                android:text="明度"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tvPenLightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sbPenFull"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="50%"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                />

            <SeekBar
                android:id="@+id/sbPenLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvPenLight"
                android:layout_marginTop="10dp"
                android:progress="50"
                android:min="0"
                android:max="100"
                android:maxHeight="10dp"
                android:progressDrawable="@drawable/seekbar_track"
                android:thumb="@drawable/seekbar_thumb"
                android:splitTrack="false"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>